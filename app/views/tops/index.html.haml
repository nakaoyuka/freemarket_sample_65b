            -# = item.thumbnail
            .productList__items__item__text
              %h8.name
                = item.name
              %ul
                %li.price
                  = "#{item.price}円"
                %li.likes
                  = icon('fa','star',class:"productList__icon")
                  .volume
                    20
              %p.tax
                (税込）

