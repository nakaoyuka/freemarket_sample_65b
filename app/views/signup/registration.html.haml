.signup-container
  %header.signup-header
    %h1
      = link_to root_path do
        = image_tag 'logo.png'
    %nav.signup-header__progress-bar.signup-header__bar
      %ol.clearfix
        %li.signup-header__list.signup-header__list--active
          会員情報
          .signup-header__progress-status
        %li.signup-header__list
          電話番号認証
          .signup-header__progress-status
        %li.signup-header__list
          完了
          .signup-header__progress-status
    
  %main.signup-main
    %section.signup-main__container
      %h2.signup-main__head.signup-main__head--registration
        会員情報入力
      = form_for @user, local: true, url: sms_confirmation_signup_index_path, method: 'GET', novalidate: 'novalidate' do |f|
        .signup-main__content
          .signup-main__form-group
            = f.label 'ニックネーム'
            %span.signup-main__form-require 必須
            = f.text_field :nickname, { class: 'signup-main__input-default', placeholder: '例) メルカリ太郎' }
          .signup-main__form-group
            = f.label 'メールアドレス'
            %span.signup-main__form-require 必須
            = f.email_field :email, { class: 'signup-main__input-default', placeholder: 'PC・携帯どちらでも可'}
          .signup-main__form-group
            = f.label 'パスワード'
            %span.signup-main__form-require 必須
            = f.password_field :password, {class: 'signup-main__input-default', placeholder: '7文字以上の半角英数字'}
            %p ※ 英字と数字の両方を含めて設定してください
          .signup-main__form-group
            %h3.signup-main__sub-head
              本人確認
            %p.signup-main__text
              安心・安全にご利用いただくために、お客さまの本人情報の登録にご協力ください。他のお客さまに公開されることはありません。
          .signup-main__form-group
            = f.label 'お名前(全角)'
            %span.signup-main__form-require 必須
            = f.text_field :last_name, {class: 'signup-main__input-default-half', placeholder: '例) 山田'}
            = f.text_field :first_name, {class: 'signup-main__input-default-half', placeholder: '例) 彩'}
          .signup-main__form-group
            = f.label 'お名前カナ(全角)'
            %span.signup-main__form-require 必須
            = f.text_field :last_name, {class: 'signup-main__input-default-half', placeholder: '例) ヤマダ'}
            = f.text_field :first_name, {class: 'signup-main__input-default-half', placeholder: '例) アヤ'}
          .signup-main__form-group
            = f.label '生年月日'
            %span.signup-main__form-require 必須