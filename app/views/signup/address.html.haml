.signupBody
  %header.signupHeader
    %h1
      = link_to root_path do
        = image_tag 'logo.png'
    %nav.signupHeader__progressBar.signupHeader__bar
      %ol.clearfix
        %li.signupHeader__list.signupHeader__list--through
          会員情報
          .signupHeader__progressStatus
        %li.signupHeader__list.signupHeader__list--passed
          電話番号認証
          .signupHeader__progressStatus
        %li.signupHeader__list.signupHeader__list--active
          お届け先住所入力
          .signupHeader__progressStatus
        %li.signupHeader__list
          完了
          .signupHeader__progressStatus
  %main.signupMain
    %section.signupMain__container
      %h2.signupMain__head.signupMain__head--registration
        お届け先住所入力
      .signupMain__inner.signupMain__inner--registrationForm
      = form_for @user, local: true, url: done_signup_index_path, method: 'GET', class: 'signupMain__inner signupMain__inner--registrationForm', novalidate: 'novalidate' do |f|
        .signupMain__content
          .signupMain__formGroup
            = f.label '郵便番号'
            %span.signupMain__formRequire 必須
            = f.text_field :nickname, { class: 'signupMain__inputDefault', placeholder: '例) メルカリ太郎' }
          .signupMain__formGroup
            = f.label '都道府県'
            %span.signupMain__formRequire 必須
          .signupMain__formGroup
            = f.label '市区町村'
            %span.signupMain__formRequire 必須
          .signupMain__formGroup
            = f.label '番地'
            %span.signupMain__formRequire 必須
          .signupMain__formGroup
            = f.label '建物名'
            %span.signupMain__formRequire 任意
          .signupMain__formGroup
            = f.label '電話'
            %span.signupMain__formRequire 任意
          .signupMain__formGroup
          %button.signupMain__btnDefault.signupMain__btnRed
            登録を完了する
  %footer.signupFooter
    %nav
      %ul.clearfix
        %li
          = link_to '#' do
            プライバシポリシー
        %li
          = link_to '#' do
            フリマ利用規約
        %li
          = link_to '#' do
            特定商取引に関する表記
    = link_to '#', class: 'signupFooter__logo' do
      = image_tag 'logo-white.png'
    %p
      %small
        ©️ FURIMA