.mainBlock
      %h2.mainBlock__ttl
        クレジットカード情報入力
      .formArea
        = form_for user do |c|
          .formArea__num
            =c.label :カード番号, class: 'form__txt'
            %span.must
              必須
            =c.text_field :card_number, type: 'text', class: 'input-number', placeholder: '半角数字のみ', maxlength: "16"
            %ul.cardsLists
              %li.cardList
                = f.label :有効期限, class: 'label'
                %span 必須
                .cardList__expire-wrap
                  = f.select :exp_month, [["01",1],["02",2],["03",3],["04",4],["05",5],["06",6],["07",7],["08",8],["09",9],["10",10],["11",11],["12",12]],{} , class: 'input-expire'
                  %span.expire-text 月
                  %br
                .cardList__expire-wrap
                  = f.select :exp_year, [["19",2019],["20",2020],["21",2021],["22",2022],["23",2023],["24",2024],["25",2025],["26",2026],["27",2027],["28",2028],["29",2029]],{} , class: 'input-expire'
                  %span.expire-text 年
          .formArea__expiration
            %p.form__txt
              有効期限
              %span.must
                必須
            .formArea__expiration-month-year
              %p.formArea__expiration-month
                %input
                月
              %p.formArea__expiration-year
                %input
                年
          .formArea__securityCode
            = c.label :セキュリティコード, class: 'label'
            %span 必須
            = c.text_field :cvc, type: 'text', class: 'input-number', placeholder: 'カード背面4桁もしくは3桁の番号', maxlength: "4"
            %p.formArea__securityCode-question
              カード裏面の番号とは？
          .formArea__btn
            = f.submit '追加する', class: 'content-bottom--add-btn', id: 'token_submit'