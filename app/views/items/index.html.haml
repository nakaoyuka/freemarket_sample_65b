= render "shared/header"

.navi
  %ul
    %li.navi__name
      = link_to root_path do
        FURIMA
      = icon("fa","chevron-right",class:"navi__icon")
    %li.navi__categoryL
      = link_to "#" do
        ベビー・キッズ
      = icon("fa","chevron-right",class:"navi__icon")
    %li.navi__categoryM
      = link_to "#" do
        ベビー服(男女兼用)〜95cm
      = icon("fa","chevron-right",class:"navi__icon")
    %li.navi__categoryS
      = link_to "#" do
        アウター
      = icon("fa","chevron-right",class:"navi__icon")
    %li.navi__itemName
      商品名

%main.itemIndex
  .itemIndex__categoryBox
    .itemIndex__pickupCategory__title
      %h1.itemIndex__pickupCategory__title__text
        メンズの商品一覧
    .itemIndex__pickupCategory__type
      %ul.itemIndex__pickupCategory__type__text
        %li.itemIndex__pickupCategory__type__text__name
          トップス
        %li.itemIndex__pickupCategory__type__text__name
          ジャケット/アウター
        %li.itemIndex__pickupCategory__type__text__name
          パンツ
        %li.itemIndex__pickupCategory__type__text__name
          靴
        %li.itemIndex__pickupCategory__type__text__name
          バッグ
        %li.itemIndex__pickupCategory__type__text__name
          スーツ
        %li.itemIndex__pickupCategory__type__text__name
          帽子
        %li.itemIndex__pickupCategory__type__text__name
          アクセサリー
        %li.itemIndex__pickupCategory__type__text__name
          小物
        %li.itemIndex__pickupCategory__type__text__name
          時計
        %li.itemIndex__pickupCategory__type__text__name
          水着

  .productList__items
    %a.productList__items__item
      = link_to "#" do
        = image_tag "free_img1.jpg"
        .productList__items__item__text
          %h8.name
            商品名
          %ul
            %li.price
              11000円
            %li.likes
              = icon('fa','star',class:"productList__icon")
              .volume
                20
          %p.tax
            (税込)


