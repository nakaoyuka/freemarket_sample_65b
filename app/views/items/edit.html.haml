.itemsEdit
  .itemsEdit__header
    = link_to root_path do
      = image_tag 'logo.png', alt: 'FURIMA', class: 'itemsEdit__logo'

  .itemsEdit__body
    = form_for @item do |f|
      .itemsEdit__container
        .itemsEdit__top
          商品の情報を入力
        .itemsEdit__title
          .itemsEdit__subTitle
            出品画像
          .itemsEdit__tag
            必須
        .itemsEdit__photoExplanation 
          最大10枚までアップロードできます

        .itemsEdit__photoUp
          .itemsEdit__photoUp--icon
            = icon("fa", "camera", class: "fa-lg fa-fw")
          .itemsEdit__photoUp--text
            ドラッグアンドドロップ
            %br
              またはクリックしてファイルをアップロード
        .itemsEdit__alert.displayNone
          画像がありません

      .itemsEdit__container
        .itemsEdit__innerContainer
          .itemsEdit__title
            .itemsEdit__subTitle
              出品名
            .itemsEdit__tag
              必須
          %input{type: "text", placeholder: "40字まで" ,class: "itemsEdit__inputBox"}
          .itemsEdit__alert.displayNone
            入力してください

        .itemsEdit__innerContainer
          .itemsEdit__title
            .itemsEdit__subTitle
              出品の説明
            .itemsEdit__tag
              必須
          %textarea{type: "text", rows: 7, placeholder: "商品の説明（必須 1,000文字以内）（色、素材、重さ、定価、注意点など）（例）2010年頃に1万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。", class: "itemsEdit__textareaBox"}
          .itemsEdit__alert.displayNone
            入力してください

      .itemsEdit__container
        .itemsEdit__mainTitle
          商品の詳細
        .itemsEdit__innerContainer
          .itemsEdit__title
            .itemsEdit__subTitle
              カテゴリー
            .itemsEdit__tag
              必須
          .itemsEdit__selectBoxL
            = f.collection_select :category_id, @item.category.parent.parent.siblings, :id , :name, {include_blank: "---", selected: @item.category.parent.parent.id}, {id:'select-parent-category',class: "itemsEdit__selectBox"}
          .itemsEdit__alert.displayNone
            選択してください

          %select.itemsEdit__selectBox.M.displayNone
            %option{value: "0"} 選択してください
            %option{value: "1"} トップス
            %option{value: "2"} ジャケット/アウター
            %option{value: "3"} パンツ
          .itemsEdit__alert.displayNone
            選択してください

          %select.itemsEdit__selectBox.S.displayNone
            %option{value: "0"} 選択してください
            %option{value: "1"} Tシャツ/カットソー（半袖/袖なし）
            %option{value: "2"} Tシャツ/カットソー（七分/長袖）
            %option{value: "3"} シャツ/ブラウス（半袖/袖なし）
            %option{value: "4"} シャツ/ブラウス（七分/長袖）
          .itemsEdit__alert.displayNone
            選択してください

        .itemsEdit__innerContainer
          .itemsEdit__title
            .itemsEdit__subTitle
              サイズ
            .itemsEdit__tag
              必須
          %select.itemsEdit__selectBox
            %option{value: "0"} 選択してください
            %option{value: "1"} XXS以下
            %option{value: "2"} XS（SS）
            %option{value: "3"} S
            %option{value: "4"} M
            %option{value: "5"} L
            %option{value: "6"} XL(LL)
            %option{value: "7"} 2XL(3L)
            %option{value: "8"} 3XL(4L)
            %option{value: "9"} 4XK(5L)以上
            %option{value: "10"} FREE SIZE
          .itemsEdit__alert.displayNone
            選択してください

        .itemsEdit__innerContainer
          .itemsEdit__title
            .itemsEdit__subTitle
              ブランド
            .items__tEditag--gray
              任意
          %input{type: "text", placeholder: "選択してください" ,class: "itemsEdit__inputBox"}

        .itemsEdit__innerContainer
          .itemsEdit__title
            .itemsEdit__subTitle
              商品の状態
            .itemsEdit__tag
              必須
          %select.itemsEdit__selectBox
            %option{value: "0"} 選択してください
            %option{value: "1"} 新品・未使用
            %option{value: "2"} 目立った傷や汚れなし
            %option{value: "3"} やや傷や汚れあり
            %option{value: "4"} 傷や汚れあり
            %option{value: "5"} 全体的に状態が悪い
          .itemsEdit__alert.displayNone
            選択してください

      .itemsEdit__container
        .itemsEdit__mainTitle
          配送について
        .itemsEdit__innerContainer
          .itemsEdit__title
            .itemsEdit__subTitle
              配送料の負担
            .itemsEdit__tag
              必須
          %select.itemsEdit__selectBox
            %option{value: "0"} 選択してください
            %option{value: "1"} 送料込み（出品者負担）
            %option{value: "2"} 着払い（購入者負担）
          .itemsEdit__alert.displayNone
            選択してください

        .itemsEdit__innerContainer
          .itemsEdit__title
            .itemsEdit__subTitle
              配送の方法
            .itemsEdit__tag
              必須
          %select.itemsEdit__selectBox
            %option{value: "0"} 選択してください
            %option{value: "1"} らくらくフリマ便
          .itemsEdit__alert.displayNone
            選択してください

        .itemsEdit__innerContainer
          .itemsEdit__title
            .itemsEdit__subTitle
              発送元の地域
            .itemsEdit__tag
              必須
          %select.itemsEdit__selectBox
            %option{value: "0"} 選択してください
            %option{value: "1"} 北海道
            %option{value: "2"} 青森県
            %option{value: "3"} 岩手県
            %option{value: "4"} 宮城県
            %option{value: "5"} 秋田県
            %option{value: "6"} 山形県
            %option{value: "7"} 福島県
            %option{value: "8"} 茨城県
            %option{value: "9"} 栃木県
            %option{value: "10"} 群馬園
            %option{value: "12"} 埼玉県
            %option{value: "13"} 千葉県
            %option{value: "14"} 東京都
            %option{value: "15"} 神奈川県
            %option{value: "16"} 新潟県
            %option{value: "17"} 富山県
            %option{value: "18"} 石川県
            %option{value: "19"} 福井県
            %option{value: "20"} 山梨県
            %option{value: "21"} 長野県
            %option{value: "22"} 岐阜県
            %option{value: "23"} 静岡県
            %option{value: "24"} 愛知県
            %option{value: "25"} 三重県
            %option{value: "26"} 滋賀県
            %option{value: "27"} 京都府
            %option{value: "28"} 大阪府
            %option{value: "29"} 兵庫県
            %option{value: "30"} 奈良県
            %option{value: "31"} 和歌山県
            %option{value: "32"} 鳥取県
            %option{value: "33"} 島根県
            %option{value: "34"} 岡山県
            %option{value: "35"} 広島県
            %option{value: "36"} 山口県
            %option{value: "37"} 徳島県
            %option{value: "38"} 香川県
            %option{value: "39"} 愛媛県
            %option{value: "40"} 高知県
            %option{value: "41"} 福岡県
            %option{value: "42"} 佐賀県
            %option{value: "43"} 長崎県
            %option{value: "44"} 熊本県
            %option{value: "45"} 大分県
            %option{value: "46"} 宮崎県
            %option{value: "47"} 鹿児島県
            %option{value: "48"} 沖縄県
            %option{value: "49"} その他
          .itemsEdit__alert.displayNone
            選択してください

        .itemsEdit__innerContainer
          .itemsEdit__title
            .itemsEdit__subTile
              発送までの日数
            .itemsEdit__tag
              必須
          %select.itemsNew__selectBox
            %option{value: "0"} 選択してください
            %option{value: "1"} 1~2日で発送
            %option{value: "2"} 2~3日で発送
            %option{value: "3"} 4~7日で発送
          .itemsEdit__alert.displayNone
            選択してください

      .itemsEdit__container
        .itemsEdit__mainTitle
          価格（¥300〜9,999,999）
        .itemsEdit__sellContainer
          .itemsNew__title
            .itemsEdit__subTitle
              販売価格
            .itemsEdit__tag
              必須
          .itemsEdit__sellPriceBox
            ¥
            %input{type: "number", placeholder: "0", min: "300", max: "9999999", style: "text-align: right;", class: "itemsNew__inputBox--sellPrice"}
        .itemsEdit__alertInputBox
          .itemsEdit__alertInputBox2.displayNone
            300以上9999999以下で入力してください

        .itemsEdit__sellPrice
          .itemsEdit__sellPrice--left
            販売手数料（10%）
          .itemsEdit__sellPrice--right
            ー

        .itemsEdit__priceProfit
          .itemsEdit__sellPrice--left
            販売利益
          .itemsEdit__priceProfit--right
            ー

        .itemsEdit__btnContainer
          .itemsEdit__modalOpen
            %button{type: "submit", class: "itemsNew__sellBtn"}
              変更する
          %button{type: "submit", class: "itemsNew__sellBtn itemsNew__backBtn"}
            キャンセル

    .itemsEdit__footer
      .itemsEdit__footerTop
        %ul.itemsEdit__footerUl
          %li.itemsEdit__footerList
            = link_to('プライバシーポリシー', {}, class: 'itemsNew__footerList--link')
          %li.itemsEdit__footerList
            = link_to('フリマ利用規約', {}, class: 'itemsNew__footerList--link')
          %li.itemsEdit__footerList
            = link_to('特定商品に関する表記', {}, class: 'itemsNew__footerList--link')

      .itemsEdit__footerLogo
        = image_tag 'logo-white.png', alt: 'FURIMA', class: 'itemsNew__logo'

      .itemsEdit__footerBottom
        @FURIMA